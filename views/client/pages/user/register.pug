extends ../../layouts/default.pug
block main
  .container.my-5.mx-auto
    .flex.justify-center
      .w-full.max-w-md
        h1(class="text-center text-2xl font-bold") Đăng ký tài khoản
        form(
          action="/user/register"
          method="POST"
        )
          .mb-4
            label(for="fullName" class="block text-sm font-medium text-gray-700") Họ và tên
            input(
              type="text"
              class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500"
              id="fullName"
              name="fullName"
              required
            )
          .mb-4
            label(for="email" class="block text-sm font-medium text-gray-700") Email
            input(
              type="email"
              class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500"
              id="email"
              name="email"
              required
            )
          .mb-4
            label(for="password" class="block text-sm font-medium text-gray-700") Mật khẩu
            input(
              type="password"
              class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500"
              id="password"
              name="password"
              required
            )
          .mb-4
            button(
              type="submit"
              class="w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-md shadow hover:bg-blue-700 focus:outline-none focus:ring focus:ring-blue-300"
            ) Đăng ký